print("=== CALCULADORA DE IMC ===")
print("Vamos calcular seu Índice de Massa Corporal\n")

# Solicitar dados do usuário
try:
    peso = float(input("Digite seu peso em kg: "))
    altura = float(input("Digite sua altura em metros (ex: 1.75): "))
    
    # Calcular o IMC
    imc = peso / (altura ** 2)
    
    print(f"\nSeu IMC é: {imc:.2f}")
    
    # Classificar o IMC
    if imc < 18.5:
        classificacao = "Abaixo do peso"
        recomendacao = "Procure um nutricionista para ganhar peso de forma saudável"
    elif imc < 25:
        classificacao = "Peso normal"
        recomendacao = "Parabéns! Continue mantendo hábitos saudáveis"
    elif imc < 30:
        classificacao = "Sobrepeso"
        recomendacao = "Considere fazer mais exercícios e ajustar a alimentação"
    elif imc < 35:
        classificacao = "Obesidade Grau I"
        recomendacao = "Recomenda-se acompanhamento médico e nutricional"
    elif imc < 40:
        classificacao = "Obesidade Grau II"
        recomendacao = "É importante buscar orientação médica especializada"
    else:
        classificacao = "Obesidade Grau III (Mórbida)"
        recomendacao = "Procure urgentemente acompanhamento médico"
    
    # Exibir resultados
    print(f"Classificação: {classificacao}")
    print(f"Recomendação: {recomendacao}")
    
    # Informações adicionais
    print("\n" + "="*50)
    print("TABELA DE REFERÊNCIA:")
    print("Abaixo de 18.5: Abaixo do peso")
    print("18.5 - 24.9: Peso normal")
    print("25.0 - 29.9: Sobrepeso")
    print("30.0 - 34.9: Obesidade Grau I")
    print("35.0 - 39.9: Obesidade Grau II")
    print("Acima de 40: Obesidade Grau III")